<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ninco.gui.controller.GUIAccountVerificationModalController">
  <children>
    <VBox prefHeight="800.0" prefWidth="800.0" style="-fx-alignment: center;">
      <children>
        <VBox maxWidth="360.0" prefWidth="360.0" spacing="32.0">
          <children>
            <Label styleClass="title" text="Verificar Correo Electrónico"/>
            <VBox prefWidth="340.0" spacing="16.0">
              <Label
                text="Hemos enviado un codigo de 6 digitos a su correo electronico. Por favor, ingreselo a continuacion."
                wrapText="true"
                styleClass="label"
              />
              <children>
                <VBox prefWidth="360.0" spacing="8.0">
                  <children>
                    <Label styleClass="label" text="Código PIN"/>
                    <TextField fx:id="fieldPin" promptText="Introduzca el PIN recibido"
                               styleClass="input"/>
                    <Label fx:id="labelTagPin" text="Label" textFill="RED"/>
                  </children>
                </VBox>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickVerify"
                        prefWidth="360.0" styleClass="button" text="Verificar"/>
              </children>
            </VBox>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
