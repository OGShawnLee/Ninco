<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninco.gui.controller.GUIRegisterEmployeeModalController">
    <children>

        <VBox alignment="CENTER" styleClass="left-panel" HBox.hgrow="ALWAYS">
            <children>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: white;" vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox alignment="CENTER">
                            <children>

                                <VBox maxWidth="360.0" spacing="20.0">
                                    <children>

                                        <VBox spacing="10.0">
                                            <children>
                                                <Label fx:id="title" styleClass="title" text="Register Employee" />
                                                <Label styleClass="subtitle" text="Enter the details to add a new team member." wrapText="true" />
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="10.0" />
                                            </VBox.margin>
                                        </VBox>

                                        <VBox spacing="15.0">
                                            <children>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="Name" />
                                                        <TextField fx:id="fieldName" promptText="Enter first name" styleClass="input-field" />
                                                        <Label fx:id="labelTagName" styleClass="error-label" text="" wrapText="true" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="Last Name" />
                                                        <TextField fx:id="fieldLastName" promptText="Enter last name" styleClass="input-field" />
                                                        <Label fx:id="labelTagLastName" styleClass="error-label" text="" wrapText="true" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="Email" />
                                                        <TextField fx:id="fieldEmail" promptText="employee@ninco.com" styleClass="input-field" />
                                                        <Label fx:id="labelTagEmail" styleClass="error-label" text="" wrapText="true" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="Role" />
                                                        <ComboBox fx:id="fieldRole" maxWidth="1.7976931348623157E308" promptText="Select Role" styleClass="input-field" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="State" />
                                                        <ComboBox fx:id="fieldState" maxWidth="1.7976931348623157E308" promptText="Select Status" styleClass="input-field" />
                                                    </children>
                                                </VBox>

                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label styleClass="field-label" text="Store" />
                                                        <ComboBox fx:id="fieldStore" maxWidth="1.7976931348623157E308" promptText="Assign to Store" styleClass="input-field" />
                                                        <Label fx:id="labelTagFieldStore" styleClass="error-label" text="" wrapText="true" />
                                                    </children>
                                                </VBox>

                                            </children>
                                        </VBox>

                                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterEmployee" styleClass="primary-button" text="Confirm Registration" />

                                    </children>
                                    <padding>
                                        <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
                                    </padding>
                                </VBox>

                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>

        <VBox alignment="BOTTOM_LEFT" prefWidth="300.0" styleClass="right-panel" HBox.hgrow="NEVER">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 24px;" styleClass="brand-title" text="HR MODULE" />
                        <Label style="-fx-font-size: 14px;" styleClass="brand-subtitle" text="Building the team." wrapText="true" />
                    </children>
                    <padding>
                        <Insets bottom="40.0" left="30.0" right="30.0" top="40.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>

    </children>
</HBox>