<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ninco.gui.controller.GUIRegisterEmployeeModalController">
  <children>
    <VBox layoutX="220.0" layoutY="99.0" prefWidth="360.0" spacing="32.0">
      <children>
        <Label styleClass="title" text="Register Employee"/>
        <VBox prefWidth="340.0" spacing="16.0">
          <children>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Name"/>
                <TextField fx:id="fieldName" promptText="Introduce the Name of the Employee" styleClass="input"/>
                <Label fx:id="labelTagName" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Last Name"/>
                <TextField fx:id="fieldLastName" promptText="Introduce the Last Name of the Employee"
                           styleClass="input"/>
                <Label fx:id="labelTagLastName" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Role"/>
                <ComboBox fx:id="fieldRole" maxWidth="1.7976931348623157E308"
                          promptText="Select the Role of the Employee" styleClass="input"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="State"/>
                <ComboBox fx:id="fieldState" maxWidth="1.7976931348623157E308"
                          promptText="Select the State of the Employee" styleClass="input"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Email"/>
                <TextField fx:id="fieldEmail" promptText="Introduce the Email of the Employee" styleClass="input"/>
                <Label fx:id="labelTagEmail" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Store"/>
                <ComboBox fx:id="fieldStore" promptText="Select the Store of the Employee"
                          maxWidth="1.7976931348623157E308" styleClass="input"/>
                <Label fx:id="labelTagFieldStore" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterEmployee"
                    styleClass="button" text="Confirm"/>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
