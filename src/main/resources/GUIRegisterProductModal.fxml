<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninco.gui.controller.GUIRegisterProductModalController">
  <children>

    <VBox alignment="CENTER" styleClass="left-panel" HBox.hgrow="ALWAYS">
      <children>
    <VBox maxWidth="360.0" prefHeight="352.0" prefWidth="360.0" spacing="20.0">
      <children>

        <VBox spacing="10.0">
          <children>
            <Label fx:id="title" styleClass="title" text="Register Product" />
            <Label styleClass="subtitle" text="Add new items to the inventory system." wrapText="true" />
          </children>
          <VBox.margin>
            <Insets bottom="10.0" />
          </VBox.margin>
        </VBox>

        <VBox spacing="15.0">
          <children>

            <VBox spacing="5.0">
<children>
                 <Label styleClass="field-label" text="Name" />
                 <TextField fx:id="fieldName" promptText="Product Name" styleClass="input-field" />
                 <Label fx:id="labelTagName" managed="false" styleClass="error-label" text="Error" visible="false" />
</children>
            </VBox>

            <VBox spacing="5.0">
<children>
                 <Label styleClass="field-label" text="Description" />
                 <TextArea fx:id="fieldDescription" prefHeight="100.0" promptText="Brief description..." styleClass="input-field" wrapText="true" />
                 <Label fx:id="labelTagDescription" managed="false" styleClass="error-label" text="Error" visible="false" />
</children>
            </VBox>

            <VBox spacing="5.0">
<children>
                 <Label styleClass="field-label" text="Brand" />
                 <TextField fx:id="fieldBrand" promptText="Brand Name" styleClass="input-field" />
                 <Label fx:id="labelTagBrand" managed="false" styleClass="error-label" text="Error" visible="false" />
</children>
            </VBox>

            <VBox spacing="5.0">
<children>
                 <Label styleClass="field-label" text="Price ($)" />
                 <TextField fx:id="fieldPrice" promptText="0.00" styleClass="input-field" />
                 <Label fx:id="labelTagPrice" managed="false" styleClass="error-label" text="Error" visible="false" />
</children>
            </VBox>

          </children>
        </VBox>

        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterProduct" styleClass="primary-button" text="Confirm Product" />

      </children>
      <padding>
        <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
      </padding>
    </VBox>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: white;" vbarPolicy="AS_NEEDED">
          <content>
            <VBox alignment="CENTER" />
          </content>
        </ScrollPane>
      </children>
    </VBox>

    <VBox alignment="BOTTOM_LEFT" prefWidth="300.0" styleClass="right-panel" HBox.hgrow="NEVER">
      <children>
        <VBox spacing="10.0">
          <children>
            <Label style="-fx-font-size: 24px;" styleClass="brand-title" text="INVENTORY" />
            <Label style="-fx-font-size: 14px;" styleClass="brand-subtitle" text="Keep your stock updated." wrapText="true" />
          </children>
          <padding>
            <Insets bottom="40.0" left="30.0" right="30.0" top="40.0" />
          </padding>
        </VBox>
      </children>
    </VBox>

  </children>
</HBox>
