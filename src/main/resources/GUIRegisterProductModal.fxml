<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ninco.gui.controller.GUIRegisterProductModalController">
  <children>
    <VBox layoutX="230.0" layoutY="154.0" prefWidth="360.0" spacing="32.0">
      <children>
        <Label styleClass="title" text="Register Product"/>
        <VBox prefWidth="340.0" spacing="16.0">
          <children>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Name"/>
                <TextField fx:id="fieldName" promptText="Introduce the Product Name" styleClass="input"/>
                <Label fx:id="labelTagName" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Description"/>
                <TextArea fx:id="fieldDescription" promptText="Introduce the Product Description" styleClass="input"/>
                <Label fx:id="labelTagDescription" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Brand"/>
                <TextField fx:id="fieldBrand" promptText="Introduce the Product Brand" styleClass="input"/>
                <Label fx:id="labelTagBrand" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <VBox prefWidth="360.0" spacing="8.0">
              <children>
                <Label styleClass="label" text="Price"/>
                <TextField fx:id="fieldPrice" promptText="Introduce the Product Price" styleClass="input"/>
                <Label fx:id="labelTagPrice" text="Label" textFill="RED"/>
              </children>
            </VBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterProduct"
                    styleClass="button" text="Confirm"/>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>
</AnchorPane>
