<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="container" prefHeight="800.0" prefWidth="1280.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninco.gui.controller.GUISalePageController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0" styleClass="right-panel" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="brand-title" text="New Sale" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="labelClientName" styleClass="brand-subtitle" text="Client: Public" textFill="WHITE" />
                <Region prefWidth="20.0" />
                <Button mnemonicParsing="false" onAction="#onClickCancel" styleClass="danger-button" style="-fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.3);" text="Cancel Sale" />
            </children>
            <padding>
                <Insets left="40.0" right="40.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                            <children>
                                <Label styleClass="field-label" text="Search Product" />
                                <HBox spacing="10.0">
                                    <children>
                                        <TextField fx:id="fieldSearchProduct" promptText="Enter product name or ID..." styleClass="input-field" HBox.hgrow="ALWAYS" />
                                        <Button mnemonicParsing="false" onAction="#onClickAddProduct" styleClass="primary-button" text="Add to Cart" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <Region prefWidth="50.0" />
                        <Button mnemonicParsing="false" onAction="#onClickRemoveItem" styleClass="secondary-button" text="Remove Selected" />
                    </children>
                </HBox>

                <TableView fx:id="tableCart" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="500.0" text="Product Name" />
                        <TableColumn fx:id="colPrice" prefWidth="150.0" text="Unit Price" />
                        <TableColumn fx:id="colQuantity" prefWidth="120.0" text="Qty" />
                        <TableColumn fx:id="colSubtotal" prefWidth="180.0" text="Subtotal" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" spacing="30.0" style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>
                <VBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Label styleClass="subtitle" text="Total Amount" />
                        <Label fx:id="labelTotal" styleClass="title" style="-fx-font-size: 32px; -fx-text-fill: #43458b;" />
                    </children>
                </VBox>

                <Button mnemonicParsing="false" onAction="#onClickCheckout" prefHeight="50.0" prefWidth="200.0" styleClass="primary-button" style="-fx-font-size: 16px;" text="Checkout" />
            </children>
        </HBox>
    </bottom>

</BorderPane>