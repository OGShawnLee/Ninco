<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="container" prefHeight="800.0" prefWidth="1280.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninco.gui.controller.GUILogInPageController">
    <children>

        <VBox alignment="CENTER" styleClass="left-panel" HBox.hgrow="ALWAYS">
            <children>
                <VBox maxWidth="400.0" spacing="25.0">
                    <children>

                        <VBox spacing="10.0">
                            <children>
                                <Label styleClass="title" text="Welcome Back" />
                                <Label styleClass="subtitle" text="Enter your credentials to access your account." />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </VBox>

                        <VBox spacing="15.0">
                            <children>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Email" />
                                        <TextField fx:id="fieldEmail" promptText="name@company.com" styleClass="input-field" />
                                        <Label fx:id="labelTagEmail" styleClass="error-label" text="" wrapText="true" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="field-label" text="Password" />
                                        <PasswordField fx:id="fieldPassword" promptText="••••••••" styleClass="input-field" />
                                        <Label fx:id="labelTagPassword" styleClass="error-label" text="" wrapText="true" />
                                    </children>
                                </VBox>

                            </children>
                        </VBox>

                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickLogIn" styleClass="primary-button" text="Log In" />
                    </children>

                    <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>

        <VBox alignment="BOTTOM_LEFT" prefWidth="500.0" styleClass="right-panel" HBox.hgrow="NEVER">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="brand-title" text="NINCO" />
                        <Label styleClass="brand-subtitle" text="Management has never been easier." wrapText="true" />
                    </children>
                    <padding>
                        <Insets bottom="60.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>

    </children>
</HBox>