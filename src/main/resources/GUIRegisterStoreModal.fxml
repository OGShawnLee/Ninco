<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="container" prefHeight="800.0" prefWidth="800.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninco.gui.controller.GUIRegisterStoreModalController">
  <children>

    <VBox alignment="CENTER" styleClass="left-panel" HBox.hgrow="ALWAYS">
      <children>
        <VBox maxWidth="360.0" spacing="25.0">
          <children>

            <VBox spacing="10.0">
              <children>
                <Label fx:id="title" styleClass="title" text="Register Store" />
                <Label styleClass="subtitle" text="Add a new physical location to the network." wrapText="true" />
              </children>
              <VBox.margin>
                <Insets bottom="10.0" />
              </VBox.margin>
            </VBox>

            <VBox spacing="15.0">
              <children>

                <VBox spacing="5.0">
   <children>
                     <Label styleClass="field-label" text="Store Name" />
                     <TextField fx:id="fieldName" promptText="e.g. Furry Street" styleClass="input-field" />
                     <Label fx:id="labelTagName" managed="false" styleClass="error-label" text="Error" visible="false" />
   </children>
                </VBox>

                <VBox spacing="5.0">
   <children>
                     <Label styleClass="field-label" text="Address" />
                     <TextField fx:id="fieldAddress" promptText="Street, City, Zip" styleClass="input-field" />
                     <Label fx:id="labelTagAddress" managed="false" styleClass="error-label" text="Error" visible="false" />
   </children>
                </VBox>

                <VBox spacing="5.0">
   <children>
                     <Label styleClass="field-label" text="Phone Number" />
                     <TextField fx:id="fieldPhoneNumber" promptText="(555) 000-0000" styleClass="input-field" />
                     <Label fx:id="labelTagPhoneNUmber" managed="false" styleClass="error-label" text="Error" visible="false" />
   </children>
                </VBox>

              </children>
            </VBox>

            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickRegisterStore" styleClass="primary-button" text="Confirm Store" />

          </children>
          <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
          </padding>
        </VBox>
      </children>
    </VBox>

    <VBox alignment="BOTTOM_LEFT" prefWidth="300.0" styleClass="right-panel" HBox.hgrow="NEVER">
      <children>
        <VBox spacing="10.0">
          <children>
            <Label style="-fx-font-size: 24px;" styleClass="brand-title" text="LOCATIONS" />
            <Label style="-fx-font-size: 14px;" styleClass="brand-subtitle" text="Expanding our reach." wrapText="true" />
          </children>
          <padding>
            <Insets bottom="40.0" left="30.0" right="30.0" top="40.0" />
          </padding>
        </VBox>
      </children>
    </VBox>

  </children>
</HBox>
