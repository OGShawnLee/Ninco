<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="container" prefHeight="800.0" prefWidth="1280.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninco.gui.controller.GUIReviewEmployeeListPageController">

  <top>
    <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0" styleClass="right-panel" BorderPane.alignment="CENTER">
      <children>
        <Label styleClass="brand-title" text="HR ADMIN" />
        <Region HBox.hgrow="ALWAYS" />
        <Label styleClass="brand-subtitle" text="Employee Management" textFill="WHITE" />
      </children>
      <padding>
        <Insets left="40.0" right="40.0" />
      </padding>
    </HBox>
  </top>

  <center>
    <VBox spacing="20.0" BorderPane.alignment="CENTER">
      <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
      </padding>
      <children>

        <HBox alignment="CENTER_LEFT" spacing="15.0">
          <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
              <children>
                <Label styleClass="field-label" text="Search Team Member" />
                <TextField fx:id="fieldSearch" maxWidth="400.0" promptText="Search by name, email or role..." styleClass="input-field" />
              </children>
            </VBox>

            <Region minWidth="20.0" />

            <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
              <children>
                <Button mnemonicParsing="false" onMouseClicked="#navigateToLandingPage" styleClass="secondary-button" text="Back to Dashboard" />
                <Button mnemonicParsing="false" onMouseClicked="#onClickManageEmployee" styleClass="secondary-button" text="Edit Selected" />
                <Button mnemonicParsing="false" onMouseClicked="#onClickRegisterEmployee" styleClass="primary-button" text="+ Register New Employee" />
              </children>
            </HBox>
          </children>
        </HBox>

        <TableView fx:id="tableEmployee" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn fx:id="columnName" prefWidth="120.0" text="Name" />
            <TableColumn fx:id="columnLastName" prefWidth="140.0" text="Last Name" />
            <TableColumn fx:id="columnEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="columnRole" prefWidth="100.0" text="Role" />
            <TableColumn fx:id="columnState" prefWidth="80.0" text="State" />
            <TableColumn fx:id="columnStoreName" prefWidth="150.0" text="Store Branch" />
            <TableColumn fx:id="columnFormattedCreatedAt" prefWidth="150.0" text="Date Joined" />
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>

      </children>
    </VBox>
  </center>

</BorderPane>