<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="container" prefHeight="800.0" prefWidth="1280.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ninco.gui.controller.GUIReviewProductListPageController">
  <children>
    <VBox layoutX="172.0" prefHeight="800.0" prefWidth="950.0" spacing="16.0">
      <children>
        <HBox alignment="CENTER_LEFT" spacing="16.0">
          <children>
            <TextField fx:id="fieldSearch" prefWidth="420.0" promptText="Search Product..."
                       styleClass="input"/>
          </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="32.0" spacing="32.0">
          <HBox alignment="CENTER" spacing="16.0">
            <Button mnemonicParsing="false" onMouseClicked="#navigateToLandingPage" styleClass="button"
                    text="Home"/>
            <Button mnemonicParsing="false" onMouseClicked="#onClickRegisterProduct" styleClass="button"
                    text="Register Product"/>
            <Button mnemonicParsing="false" onMouseClicked="#onClickManageProduct" styleClass="button"
                    text="Edit Product"/>
            <Button mnemonicParsing="false" onMouseClicked="#onClickManageStock" styleClass="button"
                    text="Manage Stock"/>
          </HBox>
        </HBox>
        <TableView fx:id="tableProduct" prefWidth="950.0" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn fx:id="columnName" prefWidth="120.0" styleClass="column" text="Name"/>
            <TableColumn fx:id="columnDescription" prefWidth="240.0" text="Description"/>
            <TableColumn fx:id="columnBrand" prefWidth="160.0" styleClass="column" text="Brand"/>
            <TableColumn fx:id="columnPrice" prefWidth="120.0" styleClass="column" text="Price"/>
            <TableColumn fx:id="columnStock" prefWidth="120.0" styleClass="column" text="Stock"/>
            <TableColumn fx:id="columnFormattedCreatedAt" prefWidth="200.0" styleClass="column"
                         text="Registered At"/>
          </columns>
        </TableView>
      </children>
      <padding>
        <Insets bottom="32.0" top="96.0"/>
      </padding>
    </VBox>
    <HBox prefHeight="64.0" prefWidth="1280.0" style="-fx-background-color: black; -fx-alignment: center-left;">
      <children>
        <Label styleClass="page-title" text="Product Administration"/>
      </children>
      <padding>
        <Insets left="64.0" right="64.0"/>
      </padding>
    </HBox>
  </children>
</AnchorPane>
