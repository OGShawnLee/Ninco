<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="container" prefHeight="800.0" prefWidth="1280.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninco.gui.controller.GUIReviewProductListPageController">

  <top>
    <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0" styleClass="right-panel" BorderPane.alignment="CENTER">
      <children>
        <Label styleClass="brand-title" text="INVENTORY" />
        <Region HBox.hgrow="ALWAYS" />
        <Label styleClass="brand-subtitle" text="Product Administration" textFill="WHITE" />
      </children>
      <padding>
        <Insets left="40.0" right="40.0" />
      </padding>
    </HBox>
  </top>

  <center>
    <VBox spacing="20.0" BorderPane.alignment="CENTER">
      <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
      </padding>
      <children>

        <HBox alignment="CENTER_LEFT" spacing="15.0">
          <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
              <children>
                <Label styleClass="field-label" text="Search Product catalog" />
                <TextField fx:id="fieldSearch" maxWidth="400.0" promptText="Search by name, brand or ID..." styleClass="input-field" />
              </children>
            </VBox>

            <Region minWidth="20.0" />

            <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
              <children>
                <Button mnemonicParsing="false" onMouseClicked="#navigateToLandingPage" styleClass="secondary-button" text="Back to Dashboard" />
                <Button mnemonicParsing="false" onMouseClicked="#onClickManageStock" styleClass="secondary-button" text="Manage Stock" />
                <Button mnemonicParsing="false" onMouseClicked="#onClickManageProduct" styleClass="secondary-button" text="Edit Selected" />

                <Button mnemonicParsing="false" onMouseClicked="#onClickRegisterProduct" styleClass="primary-button" text="+ New Product" />
              </children>
            </HBox>
          </children>
        </HBox>

        <TableView fx:id="tableProduct" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn fx:id="columnName" prefWidth="150.0" text="Product Name" />
            <TableColumn fx:id="columnBrand" prefWidth="120.0" text="Brand" />
            <TableColumn fx:id="columnDescription" prefWidth="250.0" text="Description" />
            <TableColumn fx:id="columnPrice" prefWidth="100.0" text="Price ($)" />
            <TableColumn fx:id="columnStock" prefWidth="100.0" text="Total Stock" />
            <TableColumn fx:id="columnFormattedCreatedAt" prefWidth="150.0" text="Date Registered" />
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>

      </children>
    </VBox>
  </center>

</BorderPane>